---
import SwitchDark from "../components/layout/SwitchDark.vue";
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body>
    <div class="flex justify-between dark">
      <SwitchDark />
      <nav class="flex gap-3">
        <a href="/" th:href="@{/}">Home</a>
        <a href="/post" th:href="@{/post}">Post</a>
        <a href="/links" th:href="@{/links}">Links</a>
      </nav>
      <div>
        <a href="/">默认</a>
        <a href="/?language=zh">中文</a>
        <a href="/?language=en">英文</a>
      </div>
    </div>
    <slot />
  </body>
</html>
